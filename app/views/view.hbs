
{{#>layout title="test"}}
    <div
			class="flex w-screen h-screen bg-neutral-800 items-center justify-center text-white px-4"
		>
			<div class="form-container">
				<h1 class="title">Login</h1>
				<form class="flex flex-col gap-2">
                    <label for="username">
                        User
                    </label>
					<input name="username" class="inp" type="text" aria-label="username"/>
					<label for="password">
                        Password
                    </label>
					<div x-data="{passwordVisible:false}" class="w-full relative" >
                    	<input name="password" class="inp w-full" :type="passwordVisible ? 'text' : 'password' " />
                        <button type="button" class="absolute top-0 right-0 h-full flex items-center px-2" style="pointer-events: all" @click="passwordVisible = !passwordVisible">
                            <i :class="passwordVisible ? 'fa-regular fa-eye' : 'fa-regular fa-eye-slash'"></i>
                        </button>

					</div>
				</form>
				<div>
					<button class="btn-primary">Login</button>
				</div>
			</div>
		</div>
{{/layout}}
